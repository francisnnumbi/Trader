<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/l1"
		android:layout_alignParentTop="true"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="10dp">

		<GridLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:columnCount="4"
			android:rowCount="6">

			<TextView
				android:layout_height="wrap_content"
				android:text="BALANCE SHEET"
				android:layout_width="wrap_content"
				android:layout_gravity="center"
				android:layout_column="0"
				android:layout_row="0"
				android:layout_columnSpan="4"
				android:gravity="center"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Assets"
				android:layout_width="wrap_content"
				android:layout_column="0"
				android:layout_row="1"
				android:layout_gravity="center"
				android:layout_columnSpan="2"
				android:gravity="center"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Liabilities"
				android:layout_width="wrap_content"
				android:layout_column="2"
				android:layout_row="1"
				android:layout_gravity="center"
				android:layout_columnSpan="2"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Stock:"
				android:layout_column="0"
				android:layout_row="2"
				android:layout_width="wrap_content"
				android:layout_marginLeft="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_column="1"
				android:layout_row="2"
				android:layout_width="wrap_content"
				android:id="@+id/stock_tv"
				android:gravity="right"
				android:layout_gravity="right"
				android:minEms="6"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Bank:"
				android:layout_column="0"
				android:layout_row="3"
				android:layout_width="wrap_content"
				android:layout_marginLeft="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_column="1"
				android:layout_row="3"
				android:layout_width="wrap_content"
				android:id="@+id/bank_tv"
				android:gravity="right"
				android:minEms="6"
				android:layout_gravity="right"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Capital:"
				android:layout_width="wrap_content"
				android:layout_column="2"
				android:layout_row="2"
				android:layout_marginLeft="5dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="1000"
				android:layout_width="wrap_content"
				android:id="@+id/capital_tv"
				android:gravity="right"
				android:layout_column="3"
				android:layout_row="2"
				android:layout_gravity="right"
				android:minEms="5"
				android:layout_marginRight="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Result:"
				android:layout_width="wrap_content"
				android:layout_column="2"
				android:layout_row="3"
				android:layout_marginLeft="5dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_width="wrap_content"
				android:id="@+id/result_tv"
				android:gravity="right"
				android:layout_column="3"
				android:layout_row="3"
				android:layout_gravity="right"
				android:minEms="5"
				android:layout_marginRight="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Bank Loan:"
				android:layout_column="2"
				android:layout_row="4"
				android:layout_width="wrap_content"
				android:layout_marginLeft="5dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_column="3"
				android:layout_row="4"
				android:layout_width="wrap_content"
				android:id="@+id/bank_loan_tv"
				android:gravity="right"
				android:layout_gravity="right"
				android:minEms="5"
				android:layout_marginRight="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Total:"
				android:layout_column="0"
				android:layout_row="5"
				android:layout_width="wrap_content"
				android:layout_marginLeft="2dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="1000"
				android:layout_column="1"
				android:layout_row="5"
				android:layout_width="wrap_content"
				android:id="@+id/total2_capital_tv"
				android:gravity="right"
				android:layout_gravity="right"
				android:minEms="6"
				android:layout_marginRight="2dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Total:"
				android:layout_column="2"
				android:layout_row="5"
				android:layout_width="wrap_content"
				android:layout_marginLeft="5dp"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="1000"
				android:layout_column="3"
				android:layout_row="5"
				android:layout_width="wrap_content"
				android:id="@+id/total_capital_tv"
				android:gravity="right"
				android:layout_gravity="right"
				android:minEms="5"
				android:layout_marginRight="2dp"
				android:textStyle="bold"/>

		</GridLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_below="@+id/l1"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_marginTop="30dp">

		<GridLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			rowCount="1"
			columnCount="1"
			android:columnCount="4"
			android:rowCount="3">

			<TextView
				android:layout_height="wrap_content"
				android:text="RESULT"
				android:layout_width="wrap_content"
				android:gravity="center"
				android:layout_column="0"
				android:layout_columnSpan="4"
				android:layout_row="0"
				android:layout_gravity="center"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Purchases:"
				android:layout_width="wrap_content"
				android:layout_marginLeft="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:layout_width="wrap_content"
				android:id="@+id/s_purchases"
				android:layout_column="1"
				android:layout_row="1"
				android:layout_gravity="right"
				android:gravity="right"
				android:minEms="6"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Sales:"
				android:layout_width="wrap_content"
				android:layout_column="2"
				android:layout_row="1"
				android:layout_marginLeft="3dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:id="@+id/s_sales"
				android:layout_width="wrap_content"
				android:layout_column="3"
				android:layout_row="1"
				android:layout_gravity="right"
				android:minEms="6"
				android:gravity="right"
				android:layout_marginRight="5dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Balance:"
				android:layout_width="wrap_content"
				android:layout_column="0"
				android:layout_row="2"
				android:layout_marginLeft="2dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="0"
				android:id="@+id/s_balance"
				android:layout_width="wrap_content"
				android:layout_column="1"
				android:layout_row="2"
				android:minEms="6"
				android:gravity="right"
				android:layout_gravity="right"/>

		</GridLayout>

	</LinearLayout>

</LinearLayout>

